<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <!--每个条目的字体设置-->
    <style name="ItemTextViewStyle">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_size</item>
        <item name="android:textColor">@color/blackMore</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawableRight">@drawable/icon_right</item>
    </style>

    <!--TabLayout 格式   app:tabGravity -->
    <style name="tabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">12sp</item>
        <item name="tabIndicator">@drawable/shape_tab_indicator</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/colorTabTextCheck</item>
        <item name="tabTextColor">@color/colorTabTextNormal</item>
        <item name="tabBackground">@drawable/ripple_tab_bg</item>
    </style>
</resources>
