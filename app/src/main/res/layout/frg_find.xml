<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <com.imfondof.wanandroid.other.view.FakeStatusBarView
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="发现"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/grayPressed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_qa"
            style="@style/ItemTextViewStyle"
            android:text="@string/wenda" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorGray" />


        <TextView
            android:id="@+id/tv_view"
            style="@style/ItemTextViewStyle"
            android:text="@string/view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_square"
            style="@style/ItemTextViewStyle"
            android:layout_marginTop="10dp"
            android:text="@string/square"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_welfare"
            style="@style/ItemTextViewStyle"
            android:layout_marginTop="10dp"
            android:text="@string/welfare"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_more"
            style="@style/ItemTextViewStyle"
            android:layout_marginTop="10dp"
            android:text="@string/more" />
    </LinearLayout>
</LinearLayout>