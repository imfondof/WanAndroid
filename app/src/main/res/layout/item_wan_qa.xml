<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/type"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="每日一问 try finally 都抛出异常，哪里停止呢？"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@id/type"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这是一个群友发的，还有点意思：class Test{ public static void main(String[] args){"
        android:textColor="@color/colorContent"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"

        android:layout_marginBottom="10dp"
        android:text="Imfondof" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/username"
        android:text="2010-10-10"
        android:visibility="visible" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:text="技术博客" />

    <TextView
        android:id="@+id/zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/time"
        android:text="5人点赞" />

    <CheckBox
        android:id="@+id/vb_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="7dp"
        android:background="?selectableItemBackgroundBorderless"
        android:button="@drawable/selector_collect_check" />
</RelativeLayout>